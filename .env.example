# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Database connection (default for Docker Compose)
DATABASE_URL=postgresql://knowledge_user:knowledge_pass@postgres:5432/knowledge_db

# Redis connection (default for Docker Compose)
REDIS_URL=redis://redis:6379

# Qdrant connection (default for Docker Compose)
QDRANT_URL=http://qdrant:6333

# Optional: Override default models
# EMBEDDING_MODEL=text-embedding-3-small
# COMPLETION_MODEL=gpt-4.1-mini

# Optional: Override RAG parameters
# CHUNK_SIZE=500
# CHUNK_OVERLAP=50
# TOP_K_CHUNKS=5
# SIMILARITY_THRESHOLD=0.7

# Optional: Override rate limits
# QUERIES_PER_MINUTE=10
# QUERIES_PER_HOUR=100

# Optional: Override cache TTL
# CACHE_TTL_SECONDS=3600